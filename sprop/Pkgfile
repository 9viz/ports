# Name: sprop
# Description: set x property
# Depends on: xorg-libx11

name=sprop
version=git
release=1
source=()

build() {
    cd $SRC
    [ ! -d $SRC/sprop ] && git clone git://oldgit.suckless.org/sprop --depth 1

    cd $SRC/sprop

    for i in $PKGMK_ROOT/patches/*; do
        patch -p1 < $i
    done

    make
    make PREFIX=/usr DESTDIR=$PKG install
}