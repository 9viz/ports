# Name: girara
# Description: library to build minimalist UI
# Depends on: gtk intltool

name=girara
version=0.1.9
release=1
source=(https://github.com/pwmt/$name/archive/$version.tar.gz)

build() {
	cd $name-$version
	sed -i 's/GIRARA_GTK_VERSION ?= 3/GIRARA_GTK_VERSION = 2/g' config.mk
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share
}
