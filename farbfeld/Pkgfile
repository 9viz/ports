name="farbfeld"
version="03f1f1f7adfd656f59de2b75ac74e0139931333d"
release=1
source=()

build() {
    cd $PKGMK_ROOT
    [ ! -d ./farbfeld ] && git clone git://git.suckless.org/farbfeld

    cd ./farbfeld

    git checkout "${version}"
    cp $PKGMK_ROOT/Makefile ./

    make; make PREFIX=/usr DESTDIR=$PKG install
}