# Name: ksh
# Description: portable OpenBSD ksh
# Depends on: gcc
# Optional: curses

name=ksh
version=6.6
release=1
source=(https://github.com/ibara/o${name}/archive/o${name}-${version}.tar.gz
    01-change_profile_path.patch)

build() {
    cd o${name}-o${name}-${version}
    patch -p1 < ${SRC}/01-change_profile_path.patch
    ./configure --enable-ksh            \
                --prefix=/              \
                --mandir=/usr/share/man
    make
    make DESTDIR=$PKG install
}
