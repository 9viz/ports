# Name: mpv
# Description: a media player
# Dependencies: python libass ffmpeg lcms2 xorg-libxscrnsaver libvdpau
# Optional Dependencies: youtube-dl lua

name=mpv
version=0.29.1
release=1
source=(https://github.com/$name-player/$name/archive/v$version.tar.gz)

build() {
	cd $name-$version
	./bootstrap.py
	./waf configure                 \
	      --mandir=/usr/share/man   \
	      --prefix=/usr             \
	      --enable-alsa             \
	      --disable-build-date      \
              --disable-debug-build     \
	      --disable-javascript      \
              --disable-iconv           \
	      -j ${JOBS}
	./waf
	./waf install --destdir=$PKG
	rm -r $PKG/usr/share
}
