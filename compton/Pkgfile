# Name: compton
# Description: compositor for X11
# Dependencies: meson ninja xorg-libX11 xorg-libxcb xorg-xorgxproto xorg-libxext xorg-xcb-proto xorg-libpixman xorg-xcb-util mesa3d libpcre libev uthash

name=compton
version=git
release=1
source=(https://github.com/sdhand/compton/archive/next.zip
	meson_options.txt)

build() {
	cd $name-next
	cp $SRC/meson* ./meson_options.txt
	meson --buildtype=release . build
	meson configure -Dprefix=$PKG/usr build
	ninja -C build
	ninja -C build install
	rm -r $PKG/usr/share
}
