name=xscreenshot
version=6b5515432737f1a4c93c8691829f0a17b8f42a5d
release=1
source=()

build() {
    cd $PKGMK_ROOT

    [ ! -d $PKGMK_ROOT/xscreenshot ] && git clone git://git.2f30.org/xscreenshot.git

    cd $PKGMK_ROOT/xscreenshot

    git checkout $version

    make; make DESTDIR=$PKG install
}
