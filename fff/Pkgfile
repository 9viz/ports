# Name: fff
# Description: fucking fast file manager
# Depends on: bash

name=fff
version=2.1
release=1

source=(https://github.com/dylanaraps/$name/archive/$version.tar.gz)

build() {
    cd $name-$version
    mkdir -p $PKG/usr/{bin,share/man/man1}
    cp fff $PKG/usr/bin
    cp fff.1 $PKG/usr/share/man/man1/fff.1
}