# Name: xmenu
# Description: simple pop-up menu
# Depends on: xorg-libxcb fontconfig xorg-xcb-util-renderutil freetype

name=xmenu
version=git
release=2
source=(001-spawn_at_cursor_position.patch
	002-add_more_flags.patch)

build() {
	cd $SRC
	[ ! -d xmenu ] &&
		git clone git://git.z3bra.org/xmenu.git
	cd xmenu
	sed -i 's/-lxcb-xrm//' config.mk
	for i in 1 2; do
		patch -p1 < $SRC/00$i-*.patch
	done
	make
	make PREFIX=/usr DESTDIR=$PKG install
}
