name=hsetroot
version=master
release=2

source=(https://github.com/himdel/$name/archive/$version.zip)

build() {
    cd $name-$version

    sed -i 's|install -st /usr/local/bin/ hsetroot|install -D hsetroot ${DESTDIR}/usr/local/bin/hsetroot|' "Makefile"

    patch -p1 < ../../../scale.patch

    make
    make DESTDIR=$PKG install
}
