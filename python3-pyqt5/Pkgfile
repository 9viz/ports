# Name: python3-pyqt5
# Description: Python bindings to Qt5 library
# Depends on: qt5 python3-sip

name=python3-pyqt5
version=5.13.0
release=1
source=(https://www.riverbankcomputing.com/static/Downloads/PyQt5/$version/PyQt5_gpl-$version.tar.gz)

build() {
	cd PyQt5_gpl-$version
	python3 configure.py --confirm-license \
		--qmake /usr/lib/qt5/bin/qmake \
		--no-python-dbus \
		--no-qml-plugin \
		--bindir=$PKG/usr/lib/qt5/bin \
		--destdir=$PKG/usr/lib/python3.7/site-packages \
		--designer-plugindir=$PKG/usr/lib/qt5/plugins \
		--qml-plugindir=$PKG/usr/lib/qt5/qml \
		--no-tools
	make
	make INSTALL_ROOT=$PKG install
}
