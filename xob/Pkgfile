# Name: xob
# Depends: xorg-libX11 libconfig
name="xob"
version="0.1.1"
release=1
source=(https://github.com/florentc/xob/archive/v$version.tar.gz)

build() {
    cd $name-$version/src
    for i in $PKGMK_ROOT/patches/*; do
        patch -p1 < $i
    done
    cd ..
    make
    make \
        DESTDIR=$PKG PREFIX=$DESTDIR/usr \
        install
}