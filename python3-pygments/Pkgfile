# Name: python3-pygments
# Description: a generic syntax highlighter
# Depends on: python3-setuptools

name=python3-pygments
version=2.4.2
release=1
source=(https://bitbucket.org/birkenfeld/pygments-main/get/$version.tar.gz)

build() {
	cd birkenfeld-pygments-main-800a6961ec37
	python3 setup.py build
	PYTHONUSERBASE=$PKG/usr/lib/python3.7/site-packages python3 setup.py install --user
}
