# Name: zathura
# Description: a documenter viewer
# Dependencies: glib meson girara ninja

name=zathura
version=0.4.3
release=1
source=(https://github.com/pwmt/$name/archive/$version.tar.gz)

build() {
	cd $name-$version
	meson --prefix /usr build
	cd build
	ninja -j ${JOBS}
	DESTDIR=$PKG ninja install

	rm -r $PKG/usr/share
}
