# Name: bgs
# Description: background setter
# Depends on: imlib2

name=bgs
version=git
release=1
source=(https://github.com/Gottox/$name/archive/master.zip)

build() {
    cd $name-master
    for i in $PKGMK_ROOT/patches/*; do
        patch -p1 < $i
    done
    make
    make PREFIX=/usr DESTDIR=$PKG install
}
