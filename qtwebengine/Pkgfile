# Description: Provides support for web applications using the Chromium browser project.
# URL: http://www.qt.io/
# Maintainer: Danny Rawlins, crux at romster dot me
# Depends on: nss qt5 xorg-libxscrnsaver xorg-libxtst

name=qtwebengine
version=5.13.0
release=1
source=(https://download.qt.io/official_releases/qt/${version%.*}/$version/submodules/$name-everywhere-src-$version.tar.xz)

build() {
	cd $name-everywhere-src-$version

	# Ninja, by default, sets the number of jobs to the number of availalble threads
	test -n "$JOBS" && export NINJAFLAGS+=" -j $JOBS"
	install -d build
	cd build

	/usr/lib/qt5/bin/qmake .. -- -webengine-proprietary-codecs \
		-webengine-alsa \
		-no-webengine-printing-and-pdf

	make
	make INSTALL_ROOT=$PKG install

	find "$PKG/usr/lib" -type f -name '*.prl' \
		-exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}
