# Name: zathura-pdf-poppler
# Description: pdf plugin for zathura that uses poppler
# Depends on: zathura girara poppler-glib

name=zathura-pdf-poppler
version=0.2.4
release=1
source=(https://github.com/pwmt/$name/archive/$version.tar.gz)

build() {
    cd $name-$version
    make
    make DESTDIR=$PKG install
    rm -r ${PKG}/usr/share
}
