# Name: zathura-pdf-poppler
# Description: 
# Depends on: zathura girara poppler-glib

name=zathura-pdf-poppler
version=0.2.9
release=1
source=(https://github.com/pwmt/$name/archive/$version.tar.gz)

build() {
	cd $name-$version
	meson --prefix /usr build
	cd build
	ninja -j ${JOBS}
	DESTDIR=$PKG ninja install
	rm -r ${PKG}/usr/share
}
