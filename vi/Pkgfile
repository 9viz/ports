# Name: nvi
# Description: new vi
# Depends on: curses autoconf

name=vi
version=1.81.6
release=1
source=(http://pkgs.fedoraproject.org/repo/pkgs/nvi/nvi-${version}.tar.bz2/88d1e23115ee9f2961186b62e55f5704/nvi-${version}.tar.bz2)

build() {
	cd n$name-$version/build.unix
	../dist/configure
	make
	mkdir -p $PKG/usr/{bin,share/man/man1}
	cp vi $PKG/usr/bin
	cp ../docs/vi.man/vi.1 $PKG/usr/share/man/man1
}
