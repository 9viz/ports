# Name: palemoon
# Depends on: alsa-lib python2 yasm mesa-3d sqlite bzip2 xorg-libxt

name=palemoon
version=28.5.0
release=1
source=(https://github.com/MoonchildProductions/UXP/archive/PM${version}_Release.tar.gz
        mozconfig)

build() {
    cd $SRC/UXP-PM${version}_Release
    export OLD_CONFIGURE=$_src/old-configure
    export AUTOCONF=$SRC/autoconf-2.13/autoconf
    export PKG_CONFIG=/usr/bin/pkg-config
    export CPPFLAGS="$CPPFLAGS -O2"
    cp $SRC/mozconfig .mozconfig
    ./mach configure
    ./mach build
    ./mach package
}
